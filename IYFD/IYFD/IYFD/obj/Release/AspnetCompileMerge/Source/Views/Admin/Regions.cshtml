@model IYFD.Models.Region

@{
    ViewBag.Title = "Regions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="main-content-admin">
@using (Html.BeginForm()) {
    <h2>Regions</h2>
    <div>
        <fieldset>
            <legend>Current Regions</legend>
            <ul>
            @foreach (var region in ViewBag.Regions)
            {
                <li>@Html.Raw(region.Name)</li>
            }
            </ul>
        </fieldset>
        @if(ViewBag.Regions.Count < 4)
        {
        <fieldset>
            <legend>Region Information</legend>
            <div class="editor-label">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <p>
                <input type="submit" value="Add Region" />
            </p>
        </fieldset>
        }

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {            
            <div>
                @Html.Raw(ViewBag.ErrorMessage)
            </div>
        }
    </div>
}
</div>