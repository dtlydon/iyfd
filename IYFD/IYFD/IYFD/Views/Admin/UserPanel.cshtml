@{
    ViewBag.Title = "UserPanel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-admin">
<h2>UserPanel</h2>
<table>
    <tr>
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Mimic Play</th>
        <th>Activate</th>
        <th>Change Password</th>
    </tr>
    @foreach(var user in Model)
    {
        <tr>
            <td>@Html.Raw(user.Username)</td>
            <td>@Html.Raw(user.FirstName)</td>
            <td>@Html.Raw(user.LastName)</td>
            <td>@Html.ActionLink("Mimic Play", "MimicPlay", "Admin", new { id=user.ID, round=ViewBag.Round }, null)</td>
            @if(!user.Active)
            {
                <td>@Html.ActionLink("Activate", "Activate", "Admin", new { user.ID }, null)</td>
            }
            else
            {
                <td>Active</td>
            }
            <td>@Html.ActionLink("Change Password", "ChangeUserPass", "Admin", new { user.ID }, null)</td>
        </tr>
    }
</table>
</div>